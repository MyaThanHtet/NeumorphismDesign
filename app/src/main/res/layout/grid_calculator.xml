<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/showView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_shapeType="pressed">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/corner_bg">

            <soup.neumorphism.NeumorphTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="0000"
                android:textColor="#6D3E3E3E"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.942"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.301" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </soup.neumorphism.NeumorphCardView>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@+id/showView">

        <TableRow
            android:id="@+id/firstRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <soup.neumorphism.NeumorphButton
                android:id="@+id/c"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:text="C"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/left_open"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:text="("
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/right_close"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:text=")"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/x"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:text="X"
                app:neumorph_shapeType="flat" />
        </TableRow>

        <TableRow
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <soup.neumorphism.NeumorphButton
                android:id="@+id/square_root"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:text="Root"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/percent_sign"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:text="%"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/plus_min"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:text="+/-"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/div"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:text="/"
                app:neumorph_shapeType="flat" />
        </TableRow>

        <TableRow
            android:id="@+id/third_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <soup.neumorphism.NeumorphButton
                android:id="@+id/seven"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:text="7"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/eight"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:text="8"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/nine"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:text="9"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/minus"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:text="-"
                app:neumorph_shapeType="flat" />

        </TableRow>

        <TableRow
            android:id="@+id/fourth_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <soup.neumorphism.NeumorphButton
                android:id="@+id/four"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:text="4"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/five"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:text="5"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/six"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:text="6"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/plus"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:text="+"
                app:neumorph_shapeType="flat" />

        </TableRow>

        <TableRow
            android:id="@+id/fifth_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <soup.neumorphism.NeumorphButton
                android:id="@+id/one"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:text="1"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/two"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:text="2"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/three"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="2"
                android:text="3"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/equal"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="3"
                android:text="="

                app:neumorph_shapeType="flat" />

        </TableRow>

        <TableRow
            android:id="@+id/sixth_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <soup.neumorphism.NeumorphButton
                android:id="@+id/degree"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="0"
                android:text="."
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/zero"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:text="0"
                app:neumorph_shapeType="flat" />

            <soup.neumorphism.NeumorphButton
                android:id="@+id/back"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:text="back"
                android:layout_column="3"
                app:neumorph_shapeType="flat" />


        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>